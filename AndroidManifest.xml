<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keystone.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".KeystoneHotShotActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="AddJob"
            android:screenOrientation="portrait"
            android:label="Add a new job">
        </activity>
        <activity
            android:name="AddTemplate"
            android:screenOrientation="portrait"
            android:label="Add a new template">
        </activity>
        <activity
            android:name="Jobs"
            android:screenOrientation="portrait"
            android:label="Current Jobs">
        </activity>
        <activity
            android:name="Templates"
            android:screenOrientation="portrait"
            android:label="Current Templates">
        </activity>
        <activity
            android:name="Materials"
            android:screenOrientation="portrait"
            android:label="Bill of Materials">
        </activity>
        <activity
            android:name="Estimates"
            android:screenOrientation="portrait"
            android:label="Configure Pricing for Estimates">
        </activity>
    </application>

</manifest>